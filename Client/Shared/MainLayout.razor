@using ReichertsMeatDistributing.Shared;
@inherits LayoutComponentBase



<nav class="navbar navbar-expand-lg navbar-dark px-8 position-relative">
    <a class="navbar-brand" href=""><h1>Reicherts Distributing</h1></a>
    <button class="navbar-toggler" type="button" @onclick="ToggleMenu">
        <span class="navbar-toggler-icon"></span>
    </button>


    @if (IsMenuOpen)
    {
        <div class="sidebar show">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="" @onclick="CloseMenu">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Products" @onclick="CloseMenu">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/ContactUs" @onclick="CloseMenu">Contact Us</a>
                </li>
            </ul>
        </div>
    }

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown" href="/Products" id="productsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
                        Products
                    </a>
                    <div class="dropdown-menu" aria-labelledby="productsDropdown" style="background-color: lightgray">
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.All)">All</button>
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.Bars)">Bars</button>
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.Restaurants)">Restaurants</button>
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.BurgerBars)">Burger Bars</button>
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.CoffeeShops)">Coffee Shops</button>
                        <button class="dropdown-item" @onclick="() => SelectCategory(BusinessCategory.ConvenienceStores)">Convenience Stores</button>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/ContactUs">Contact Us</a>
                </li>
            </ul>
        </div>
</nav>
<main>
        @Body
</main>

<footer class="footer">
    <div class="footer-content">
        <!-- Ready to Get Started Section -->
        <div class="footer-cta">
            <h2>Ready to Get Started?</h2>
            <p>Join hundreds of businesses that trust Reicherts for their food supply needs</p>
            <div class="footer-cta-buttons">
                <a href="/Products" class="btn btn-primary">View Our Products</a>
                <a href="/ContactUs" class="btn btn-outline-light">Request Quote</a>
            </div>
        </div>
        
        <!-- Company Info Section -->
        <div class="footer-main">
            <div class="footer-info">
                <h3>REICHERT'S DISTRIBUTING, INC.</h3>
                <div class="contact-details">
                    <div class="contact-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                        </svg>
                        <a href="https://goo.gl/maps/TToGHisF5bkrnxJVA">3701 Northpark Drive Centralia, Washington 98531</a>
                    </div>
                    <div class="contact-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                        </svg>
                        <a href="mailto:reichertsdistributinginc@gmail.com">reichertsdistributinginc@gmail.com</a>
                    </div>
                    <div class="contact-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                        </svg>
                        <span>360-330-1653</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Copyright Section -->
        <div class="footer-copyright">
            <p>© @DateTime.Now.Year - Reicherts Distributing Inc.</p>
        </div>
    </div>
</footer>

<script>
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 992) {
            // Auto-close mobile menu on desktop
            if (typeof DotNet !== 'undefined') {
                DotNet.invokeMethodAsync('ReichertsMeatDistributing.Client.Shared', 'CloseMenuOnResize');
            }
        }
    });
</script>

