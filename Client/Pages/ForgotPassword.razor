@page "/forgot-password"

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Forgot Password</h2>
                    <form @onsubmit="ResetPassword">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input id="email" type="email" class="form-control" @bind="@email" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email;
    private bool resetSuccess = false;

    [Inject]
    private HttpClient HttpClient { get; set; }

    private async Task ResetPassword()
    {
        // Call the API endpoint to send password reset instructions to the provided email
        var response = await HttpClient.PostAsJsonAsync("api/admin/reset-password", email);

        if (response.IsSuccessStatusCode)
        {
            resetSuccess = true;
        }
        else
        {
            // Handle the case where the password reset request fails
            // You can display an error message to the user or take appropriate action
            resetSuccess = false;
        }
    }
}
