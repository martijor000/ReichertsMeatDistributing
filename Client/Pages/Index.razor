@page "/"
@inject NavigationManager NavigationManager
@using ReichertsMeatDistributing.Client.Services;
@using ReichertsMeatDistributing.Shared
@inject IDealService ideal;
@inject IJSRuntime JSRuntime;

@code {
    private async Task ScrollToDeals()
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", "deals-section");
    }
}

<!-- Hero Section with Background Image Only -->
<div class="hero-section">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    
    <div class="hero-content">
        <div class="container">
            <div class="hero-main">
                <div class="hero-text">
                    <h1 class="hero-title">Reicherts Distributing</h1>
                    <p class="hero-subtitle">Premium Quality Food Products for Your Business</p>
                    <div class="hero-buttons">
                        <button @onclick="ScrollToDeals" class="btn btn-primary btn-lg">Explore Deals</button>
                        <a href="/Products" class="btn btn-outline-light btn-lg">Explore Products</a>
                        <a href="/ContactUs" class="btn btn-outline-light btn-lg">Get in Touch</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deal of the Week - MAIN FOCUS Section -->
<div class="deal-hero-section" id="deals-section">
    <div class="container">
        <div class="deal-hero">
            <div class="deal-hero-header">
                <div class="deal-badge">
                    <span class="deal-icon">🔥</span>
                    <span class="deal-text">DEAL OF THE WEEK</span>
                </div>
                <h2 class="deal-title">Special Offers Just For You</h2>
                <p class="deal-subtitle">Limited time deals on premium products</p>
            </div>
            
            <div class="deal-grid">
                @if (deals != null && deals.Any())
                {
                    @foreach (var deal in deals)
                    {
                        <div class="deal-card featured">
                            <div class="deal-card-header">
                                <div class="deal-tag">HOT DEAL</div>
                                <div class="deal-price">$@deal.Price.ToString("F2")</div>
                            </div>
                            <div class="deal-card-body">
                                <h3 class="deal-name">@deal.Name</h3>
                                <p class="deal-description">@deal.Description</p>
                                <div class="deal-features">
                                    <span class="deal-feature">✓ Premium Quality</span>
                                    <span class="deal-feature">✓ Limited Time</span>
                                </div>
                            </div>
                            <div class="deal-card-footer">
                                <span class="deal-availability">While Supplies Last</span>
                                <a href="/ContactUs" class="btn btn-deal">Order Now</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Sample deals when none are available -->
                    <div class="deal-card featured">
                        <div class="deal-card-header">
                            <div class="deal-tag">HOT DEAL</div>
                            <div class="deal-price">$24.99</div>
                        </div>
                        <div class="deal-card-body">
                            <h3 class="deal-name">Premium Angus Beef Patties</h3>
                            <p class="deal-description">High-quality 80/20 ground beef patties, perfect for restaurants and burger bars. Each patty is hand-formed and individually wrapped for freshness.</p>
                            <div class="deal-features">
                                <span class="deal-feature">✓ Premium Quality</span>
                                <span class="deal-feature">✓ Limited Time</span>
                            </div>
                        </div>
                        <div class="deal-card-footer">
                            <span class="deal-availability">While Supplies Last</span>
                            <a href="/ContactUs" class="btn btn-deal">Order Now</a>
                        </div>
                    </div>
                    
                    <div class="deal-card featured">
                        <div class="deal-card-header">
                            <div class="deal-tag">HOT DEAL</div>
                            <div class="deal-price">$32.99</div>
                        </div>
                        <div class="deal-card-body">
                            <h3 class="deal-name">Fresh Chicken Breast Pack</h3>
                            <p class="deal-description">Boneless, skinless chicken breasts from free-range chickens. Perfect for grilling, baking, or frying. Pack of 10 large breasts.</p>
                            <div class="deal-features">
                                <span class="deal-feature">✓ Premium Quality</span>
                                <span class="deal-feature">✓ Limited Time</span>
                            </div>
                        </div>
                        <div class="deal-card-footer">
                            <span class="deal-availability">While Supplies Last</span>
                            <a href="/ContactUs" class="btn btn-deal">Order Now</a>
                        </div>
                    </div>
                    
                    <div class="deal-card featured">
                        <div class="deal-card-header">
                            <div class="deal-tag">HOT DEAL</div>
                            <div class="deal-price">$28.99</div>
                        </div>
                        <div class="deal-card-body">
                            <h3 class="deal-name">Gourmet Sausage Assortment</h3>
                            <p class="deal-description">Artisanal sausages including bratwurst, Italian, and chorizo. Made with premium spices and natural casings. Great for bars and restaurants.</p>
                            <div class="deal-features">
                                <span class="deal-feature">✓ Premium Quality</span>
                                <span class="deal-feature">✓ Limited Time</span>
                            </div>
                        </div>
                        <div class="deal-card-footer">
                            <span class="deal-availability">While Supplies Last</span>
                            <a href="/ContactUs" class="btn btn-deal">Order Now</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Business Categories Section -->
<div class="categories-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">We Serve All Types of Businesses</h2>
            <p class="section-subtitle">From restaurants to convenience stores, we've got you covered</p>
        </div>
        
        <div class="categories-grid">
            <a href="/Products?category=Bars" class="category-card">
                <div class="category-icon">🍺</div>
                <h3 class="category-name">Bars & Pubs</h3>
                <p class="category-description">Premium products for your bar menu</p>
            </a>
            
            <a href="/Products?category=Restaurants" class="category-card">
                <div class="category-icon">🍽️</div>
                <h3 class="category-name">Restaurants</h3>
                <p class="category-description">Quality ingredients for fine dining</p>
            </a>
            
            <a href="/Products?category=BurgerBars" class="category-card">
                <div class="category-icon">🍔</div>
                <h3 class="category-name">Burger Bars</h3>
                <p class="category-description">Perfect products for your burgers</p>
            </a>
            
            <a href="/Products?category=CoffeeShops" class="category-card">
                <div class="category-icon">☕</div>
                <h3 class="category-name">Coffee Shops</h3>
                <p class="category-description">Light bites and snacks</p>
            </a>
            
            <a href="/Products?category=ConvenienceStores" class="category-card">
                <div class="category-icon">🏪</div>
                <h3 class="category-name">Convenience Stores</h3>
                <p class="category-description">Ready-to-sell products</p>
            </a>
        </div>
    </div>
</div>

<!-- Company Info Section -->
<div class="company-section">
    <div class="container">
        <div class="company-grid">
            <div class="company-info">
                <h3 class="company-title">Why Choose Reicherts?</h3>
                <div class="company-features">
                    <div class="company-feature">
                        <div class="feature-icon">🌟</div>
                        <div class="feature-content">
                            <h4>Premium Quality</h4>
                            <p>We source only the finest ingredients for your business</p>
                        </div>
                    </div>
                    
                    <div class="company-feature">
                        <div class="feature-icon">🚚</div>
                        <div class="feature-content">
                            <h4>Reliable Delivery</h4>
                            <p>Consistent, on-time delivery to keep your business running</p>
                        </div>
                    </div>
                    
                    <div class="company-feature">
                        <div class="feature-icon">💰</div>
                        <div class="feature-content">
                            <h4>Competitive Pricing</h4>
                            <p>Great value without compromising on quality</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="hours-card">
                <div class="hours-header">
                    <h3>🕒 Business Hours</h3>
                    <p>We're here when you need us</p>
                </div>
                <div class="hours-grid">
                    <div class="hours-row">
                        <span class="day">Monday - Friday</span>
                        <span class="time">6:00 AM - 2:00 PM</span>
                    </div>
                    <div class="hours-row">
                        <span class="day">Saturday</span>
                        <span class="time">Closed</span>
                    </div>
                    <div class="hours-row">
                        <span class="day">Sunday</span>
                        <span class="time">Closed</span>
                    </div>
                </div>
                <div class="hours-footer">
                    <a href="/ContactUs" class="btn btn-outline-primary">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.scrollToElement = function (elementId) {
        const element = document.getElementById(elementId);
        if (element) {
            element.scrollIntoView({ behavior: 'smooth' });
        }
    };
</script>


