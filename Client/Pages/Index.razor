                    </p>
                </div>
            </div>
        </div>
            @if (currentDeal != null)
            {
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4 position-relative">
                            <div>
                                <h1>Deal Of The Week</h1><br/>
                                <div>
                                    <h2>@currentDeal.Name</h2><br/>
                                    <p>@currentDeal.Description</p><br/>
                                    <p>@currentDeal.Price</p>
                                </div>
                        @if (deals.Count > 1) 
                        {
                            <div class="position-absolute top-50 start-0 translate-middle-y">
                                <button class="btn btn-arrow shadow-none" onclick="@PreviousSlideHandler">&#8249;</button>
                            </div>
                            <div class="position-absolute top-50 end-0 translate-middle-y">
                                <button class="btn btn-arrow shadow-none" onclick="@NextSlideHandler">&#8250;</button>
                            </div>
                        }
                    </div>
                    </div>
                </div>
            }
    </div>
</div>


