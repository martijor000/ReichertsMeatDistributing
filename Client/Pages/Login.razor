@page "/login"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using ReichertsMeatDistributing.Shared


<div class="imgContainer">
    <div class="image-overlay">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title text-center">Admin Login</h2>
                            <div class="text-center">
                                <p class="mb-4">Sign in with your Google account to access the admin panel</p>
                                

                                
                                <button type="button" class="btn btn-google" @onclick="SignInWithGoogle">
                                    <svg width="18" height="18" viewBox="0 0 18 18" class="me-2">
                                        <path fill="#4285F4" d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 0 0 2.38-5.88c0-.57-.05-.66-.15-1.18"></path>
                                        <path fill="#34A853" d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2.04a4.8 4.8 0 0 1-7.18-2.53H1.83v2.07A8 8 0 0 0 8.98 17"></path>
                                        <path fill="#FBBC05" d="M4.5 10.49a4.8 4.8 0 0 1 0-3.09V5.33H1.83a8 8 0 0 0 0 7.16l2.67-2.07"></path>
                                        <path fill="#EA4335" d="M8.98 4.72c1.16 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 0 0 1.83 5.33L4.5 7.4c.66-2.03 2.56-3.5 4.48-2.68"></path>
                                    </svg>
                                    Sign in with Google
                                </button>
                                
                                @if (!string.IsNullOrEmpty(errorMessage))
                                {
                                    <div class="alert alert-danger mt-3" role="alert">
                                        @errorMessage
                                    </div>
                                }
                                
                                @if (isLoading)
                                {
                                    <div class="mt-3">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-2">Signing you in...</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>